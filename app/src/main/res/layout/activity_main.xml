<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расписание занятий"
            android:onClick="btnScheduleClick"/>

        <Button
            android:id="@+id/btnTeacher"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Преподаватели"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:onClick="btnTeacherClick"/>

        <Button
            android:id="@+id/btnDiscipline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Предметы"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:onClick="btnDisciplineClick"/>

        <Button
            android:id="@+id/btnAuditory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Аудитории"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:onClick="btnAuditoryClick"/>

        <Button
            android:id="@+id/btnGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Группы"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:onClick="btnGroupClick"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>